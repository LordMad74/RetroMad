{
    "name": "retromad-portal",
    "private": true,
    "version": "0.7.0",
    "type": "module",
    "main": "electron/main.cjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build && electron-packager . --out=dist-win --platform=win32 --arch=x64 --overwrite --prune --ignore=\"^/(\\.cache|dist-win|dist-electron|dist-installer|RetroMad_v.*|Content|Skyscraper|SkyscraperData|RetroMad_Portable.*|RetroMad_Lite.*|src|scripts|\\.git|\\.vscode|tsconfig.*|vite\\.config.*|node_modules/7zip-bin/(mac|linux))\"",
        "preview": "vite preview",
        "electron:dev": "concurrently -k \"cross-env NODE_ENV=development cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:prod": "vite build && cross-env NODE_ENV=production electron .",
        "package:full": "node scripts/build-portable.cjs"
    },
    "dependencies": {
        "7zip-bin": "^5.2.0",
        "adm-zip": "^0.5.16",
        "bonjour-service": "^1.3.0",
        "express": "^5.2.1",
        "node-7z": "^3.0.0",
        "pexels": "^1.4.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@vitejs/plugin-react": "^4.2.0",
        "axios": "^1.13.2",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2",
        "fast-xml-parser": "^5.3.3",
        "framer-motion": "^10.16.4",
        "lucide-react": "^0.292.0",
        "qrcode.react": "^4.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.0",
        "typescript": "^5.2.2",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.retromad.portal",
        "productName": "RetroMad Portal",
        "directories": {
            "output": "dist-installer"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "win": {
            "target": "dir"
        }
    }
}